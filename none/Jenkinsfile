pipeline
{
    agent none
        stages
        {
            stage('Build')
            {
                agent any
                steps
                {
                    sh '''
                    echo "Hi"
                    '''
                }
            }

            satge('Deploy')
            {
                agent { label 'slave1' }
                steps 
                {
                    sh '''
                    echo "Hello"
                    '''
                    
                }

            }

            stage('Testing')
            {
                agent { label 'slave2' }
                steps 
                {
                    sh '''
                    echo "Bye"
                    '''
                }
            }

        }
}